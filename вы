from flask import Flask, jsonify
from projects.project1 import views as project1
from projects.project2 import views as project2

app = Flask(__name__)

# Главный маршрут для проверки работы сервера
@app.route('/api', methods=['GET'])
def main():
    return jsonify({"message": "Главный сервер работает!"})

# Регистрируем маршруты из проектов
app.register_blueprint(project1.blueprint, url_prefix='/api/project1')
app.register_blueprint(project2.blueprint, url_prefix='/api/project2')

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5000, debug=True)
