from flask import Flask, render_template_string

app = Flask(__name__)

@app.route('/')
def index():
    # Здесь простой HTML-шаблон страницы
    html_content = '''
    <!DOCTYPE html>
    <html>
        <head>
            <title>Flask Browser</title>
        </head>
        <body>
            <h1>Welcome to the Flask Server!</h1>
            <p>This is a simple web page served by Flask.</p>
        </body>
    </html>
    '''
    return render_template_string(html_content)

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5000)  # Делаем сервер доступным по сети
