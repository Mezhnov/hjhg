#include <windows.h>
#include <gdiplus.h>
#include <wininet.h>
#include <string>
#include <vector>
#include <chrono>
#include <iomanip>
#include <sstream>
#include <locale>
#include <codecvt>
#include <memory> // For smart pointers

#pragma comment(lib, "gdiplus.lib")
#pragma comment(lib, "wininet.lib")

using namespace Gdiplus;

// Structure to store image information
struct ImageItem {
    std::unique_ptr<Image> image; // Use smart pointer for automatic memory management
    std::wstring title;
    float x;      // X-coordinate on the screen
    float y;      // Y-coordinate on the screen
    float width;  // Width of the displayed image
    float height; // Height of the displayed image
};

// Structure to store window-specific data
struct WindowData {
    bool isDragging = false;
    size_t draggingImageIndex = SIZE_MAX; // Invalid index initially
    POINT lastMousePos = { 0, 0 };
    std::unique_ptr<Image> backgroundImage = nullptr;
    std::vector<ImageItem> images;
};

// List of languages
std::vector<std::wstring> languages = { L"РУС", L"ENG" }; // Russian and English
int currentLanguageIndex = 0; // Current language index

// Function to load image from URL
bool LoadImageFromURL(const std::wstring& url, std::unique_ptr<Image>& outImage) {
    HINTERNET hInternet = InternetOpen(L"ImageLoader", INTERNET_OPEN_TYPE_DIRECT, NULL, NULL, 0);
    if (!hInternet) {
        OutputDebugString(L"InternetOpen failed\n");
        return false;
    }

    // Flags for opening URL: no cache and reading data as it downloads
    HINTERNET hConnect = InternetOpenUrl(hInternet, url.c_str(), NULL, 0, INTERNET_FLAG_RELOAD | INTERNET_FLAG_DONT_CACHE | INTERNET_FLAG_NO_CACHE_WRITE, 0);
    if (!hConnect) {
        OutputDebugString(L"InternetOpenUrl failed\n");
        InternetCloseHandle(hInternet);
        return false;
    }

    // Read all data
    std::vector<BYTE> buffer;
    DWORD bytesAvailable = 0;
    DWORD bytesRead = 0;
    BYTE tempBuffer[4096];
    while (InternetQueryDataAvailable(hConnect, &bytesAvailable, 0, 0) && bytesAvailable > 0) {
        DWORD toRead = min(bytesAvailable, (DWORD)sizeof(tempBuffer));
        if (InternetReadFile(hConnect, tempBuffer, toRead, &bytesRead) && bytesRead > 0) {
            buffer.insert(buffer.end(), tempBuffer, tempBuffer + bytesRead);
        }
        else {
            break;
        }
    }

    InternetCloseHandle(hConnect);
    InternetCloseHandle(hInternet);

    if (buffer.empty()) {
        OutputDebugString(L"No data downloaded from URL\n");
        return false;
    }

    // Create a stream from the buffer
    IStream* stream = nullptr;
    if (FAILED(CreateStreamOnHGlobal(NULL, TRUE, &stream))) {
        OutputDebugString(L"CreateStreamOnHGlobal failed\n");
        return false;
    }

    ULONG written;
    if (FAILED(stream->Write(buffer.data(), buffer.size(), &written)) || written != buffer.size()) {
        OutputDebugString(L"Stream write failed\n");
        stream->Release();
        return false;
    }

    LARGE_INTEGER liZero = {};
    stream->Seek(liZero, STREAM_SEEK_SET, NULL);

    // Load image from stream
    std::unique_ptr<Image> img(new Image(stream));
    stream->Release();

    // Check image load status
    if (img->GetLastStatus() != Ok) {
        OutputDebugString(L"Failed to create Image from stream\n");
        return false;
    }

    outImage = std::move(img);
    OutputDebugString(L"Image loaded successfully\n");
    return true;
}

// Function to get current time as string
std::wstring GetCurrentTimeString() {
    using namespace std::chrono;
    auto now = system_clock::now();
    std::time_t now_c = system_clock::to_time_t(now);
    std::tm parts;

    // Use localtime_s for thread safety
    localtime_s(&parts, &now_c);

    std::wstringstream ss;
    ss << std::put_time(&parts, L"%H:%M"); // Time format HH:MM
    return ss.str();
}

// Function to initialize additional images
bool InitializeImages(WindowData& winData) {
    // List of image URLs and corresponding titles
    std::vector<std::pair<std::wstring, std::wstring>> imageData = {
        { L"https://i.postimg.cc/63Y3mC8J/nyc01-temp-zg8pt-R0-FL1-KMi-Z8o-ZL4b.png", L"Новая папка" }, // New Folder
        { L"https://i.postimg.cc/0Q12Jw0R/fra01-temp-r-MINe9-WDa-DPi-KQl-Rb3p-F-processed.png", L"Этот компьютер" } // This Computer
        // Add more images as needed
    };

    // Initial positions for images
    float startX = 50.0f;
    float startY = 150.0f; // Positioned below the announcement
    float spacing = 150.0f; // Reduced spacing for better layout

    for (size_t i = 0; i < imageData.size(); ++i) {
        std::unique_ptr<Image> img = nullptr;
        if (LoadImageFromURL(imageData[i].first, img)) {
            ImageItem item;
            item.image = std::move(img);
            item.title = imageData[i].second;
            item.x = startX + i * spacing; // Position along X-axis with spacing
            item.y = startY;                // Fixed Y position
            item.width = 100.0f;            // Image width
            item.height = 100.0f;           // Image height
            winData.images.push_back(std::move(item));
        }
        else {
            OutputDebugString((L"Failed to load image: " + imageData[i].first + L"\n").c_str());
            return false;
        }
    }
    return true;
}

// Window Procedure
LRESULT CALLBACK WindowProc(HWND hwnd, UINT uMsg, WPARAM wParam, LPARAM lParam) {
    // Retrieve WindowData
    WindowData* data = reinterpret_cast<WindowData*>(GetWindowLongPtr(hwnd, GWLP_USERDATA));

    switch (uMsg) {
    case WM_CREATE: {
        // Allocate and store WindowData
        CREATESTRUCT* cs = reinterpret_cast<CREATESTRUCT*>(lParam);
        WindowData* wndData = new WindowData();

        // Assign to GWLP_USERDATA
        SetWindowLongPtr(hwnd, GWLP_USERDATA, reinterpret_cast<LONG_PTR>(wndData));

        // Initialize images
        if (!InitializeImages(*wndData)) {
            MessageBox(hwnd, L"Не удалось загрузить дополнительные изображения. Приложение будет закрыто.", L"Ошибка", MB_ICONERROR);
            PostQuitMessage(0);
        }

        // Load background image
        if (!LoadImageFromURL(L"https://i.pinimg.com/originals/56/cb/5f/56cb5ff3d83e4159c447b04d5d3a333e.jpg", wndData->backgroundImage)) {
            MessageBox(hwnd, L"Не удалось загрузить фон. Приложение будет закрыто.", L"Ошибка", MB_ICONERROR);
            PostQuitMessage(0);
        }

        return 0;
    }

    case WM_DESTROY:
        // Clean up WindowData
        if (data) {
            // Unique pointers automatically clean up
            delete data;
            SetWindowLongPtr(hwnd, GWLP_USERDATA, 0);
        }
        PostQuitMessage(0);
        return 0;

    case WM_KEYDOWN:
        // Check for Esc key to close the window
        if (wParam == VK_ESCAPE) {
            DestroyWindow(hwnd); // Close window
        }

        // Handle language switching via Alt+Shift or Win+Space
        if (((GetAsyncKeyState(VK_MENU) & 0x8000) && wParam == VK_SHIFT) ||
            ((GetAsyncKeyState(VK_LWIN) & 0x8000) && wParam == VK_SPACE)) {
            currentLanguageIndex = (currentLanguageIndex + 1) % languages.size(); // Switch language
            InvalidateRect(hwnd, NULL, TRUE); // Redraw window
        }

        return 0;

    case WM_SIZE: {
        InvalidateRect(hwnd, NULL, TRUE); // Redraw window on resize
        return 0;
    }

    case WM_PAINT: {
        if (!data) {
            return DefWindowProc(hwnd, uMsg, wParam, lParam);
        }

        PAINTSTRUCT ps;
        HDC hdc = BeginPaint(hwnd, &ps);
        Graphics graphics(hdc);

        // Set high-quality rendering settings
        graphics.SetSmoothingMode(SmoothingModeHighQuality);
        graphics.SetInterpolationMode(InterpolationModeHighQualityBicubic);
        graphics.SetPixelOffsetMode(PixelOffsetModeHighQuality);

        // Get window dimensions
        RECT windowRect;
        GetClientRect(hwnd, &windowRect);

        // Draw background image while maintaining aspect ratio
        if (data->backgroundImage) {
            UINT imgWidth = data->backgroundImage->GetWidth();
            UINT imgHeight = data->backgroundImage->GetHeight();

            double windowAspect = static_cast<double>(windowRect.right) / windowRect.bottom;
            double imageAspect = static_cast<double>(imgWidth) / imgHeight;

            double drawWidth, drawHeight;
            if (windowAspect > imageAspect) {
                // Window is wider than image
                drawHeight = windowRect.bottom;
                drawWidth = imageAspect * drawHeight;
            }
            else {
                // Window is narrower or equal to image
                drawWidth = windowRect.right;
                drawHeight = drawWidth / imageAspect;
            }

            float x = static_cast<float>((windowRect.right - drawWidth) / 2.0);
            float y = static_cast<float>((windowRect.bottom - drawHeight) / 2.0);
            graphics.DrawImage(data->backgroundImage.get(), x, y, static_cast<REAL>(drawWidth), static_cast<REAL>(drawHeight));
        }

        // Draw bottom panel
        RECT panelRect = { 0, windowRect.bottom - 40, windowRect.right, windowRect.bottom };
        FillRect(hdc, &panelRect, (HBRUSH)(COLOR_BTNFACE + 1)); // Panel color

        // Get current time
        std::wstring timeString = GetCurrentTimeString();
        std::wstring langString = languages[currentLanguageIndex]; // Current language

        // Use GDI+ to draw text
        FontFamily fontFamily(L"Segoe UI"); // Font selection
        Font font(&fontFamily, 14, FontStyleRegular, UnitPixel); // Font size
        SolidBrush brush(Color(255, 0, 0, 0)); // Black text color

        // Measure text sizes
        RectF timeRect;
        graphics.MeasureString(timeString.c_str(), -1, &font, PointF(0, 0), &timeRect);
        RectF langRect;
        graphics.MeasureString(langString.c_str(), -1, &font, PointF(0, 0), &langRect);

        // Calculate positions for text
        float padding = 15.0f;
        float xTime = static_cast<float>(windowRect.right - timeRect.Width - langRect.Width - 30); // Right margin
        float yText = static_cast<float>(windowRect.bottom - 40 + (40 - timeRect.Height) / 2.0 - 1); // Vertical alignment

        // Draw current language
        PointF langPoint(xTime - langRect.Width - 10, yText); // Position to the left of time
        graphics.DrawString(langString.c_str(), -1, &font, langPoint, &brush);

        // Draw current time
        PointF timePoint(xTime, yText);
        graphics.DrawString(timeString.c_str(), -1, &font, timePoint, &brush);

        // Add OS announcement at the center of the screen
        std::wstring announcement = L"Introducing Orega OS: The Future of Performance!";
        RectF announcementRect;
        Font largeFont(&fontFamily, 40, FontStyleBold, UnitPixel); // Font for announcement
        graphics.MeasureString(announcement.c_str(), -1, &largeFont, PointF(0, 0), &announcementRect);

        // Position announcement at the center
        float xAnnouncement = (static_cast<float>(windowRect.right) - announcementRect.Width) / 2.0f;
        float yAnnouncement = (static_cast<float>(windowRect.bottom) - announcementRect.Height) / 2.0f;
        PointF announcementPoint(xAnnouncement, yAnnouncement);

        SolidBrush announcementBrush(Color(255, 255, 255, 255)); // White text color for announcement
        graphics.DrawString(announcement.c_str(), -1, &largeFont, announcementPoint, &announcementBrush);

        // Draw additional images and their titles
        for (const auto& imgItem : data->images) {
            if (imgItem.image) {
                // Draw image
                graphics.DrawImage(imgItem.image.get(), imgItem.x, imgItem.y, imgItem.width, imgItem.height);

                // Draw title below the image, centered
                Font titleFont(&fontFamily, 16, FontStyleRegular, UnitPixel);
                SolidBrush titleBrush(Color(255, 255, 255, 255)); // White text color for titles

                RectF titleRect;
                graphics.MeasureString(imgItem.title.c_str(), -1, &titleFont, PointF(0, 0), &titleRect);

                float xTitle = imgItem.x + (imgItem.width - titleRect.Width) / 2.0f;
                float yTitle = imgItem.y + imgItem.height + 5.0f; // Offset below image

                PointF titlePoint(xTitle, yTitle);
                graphics.DrawString(imgItem.title.c_str(), -1, &titleFont, titlePoint, &titleBrush);
            }
        }

        EndPaint(hwnd, &ps);
        return 0;
    }

    case WM_LBUTTONDOWN: {
        if (data) {
            // Get mouse position
            int mouseX = GET_X_LPARAM(lParam);
            int mouseY = GET_Y_LPARAM(lParam);
            POINT mousePt = { mouseX, mouseY };

            // Iterate from topmost to bottom to find the topmost image under the cursor
            for (size_t i = data->images.size(); i-- > 0; ) {
                const auto& imgItem = data->images[i];
                RECT imgRect = {
                    static_cast<LONG>(imgItem.x),
                    static_cast<LONG>(imgItem.y),
                    static_cast<LONG>(imgItem.x + imgItem.width),
                    static_cast<LONG>(imgItem.y + imgItem.height)
                };
                if (PtInRect(&imgRect, mousePt)) {
                    // Start dragging
                    data->isDragging = true;
                    data->draggingImageIndex = i;
                    data->lastMousePos = mousePt;

                    // Capture the mouse
                    SetCapture(hwnd);

                    // Bring the dragged image to the front
                    if (i != data->images.size() - 1) { // Check if not already the topmost
                        ImageItem draggedItem = std::move(data->images[i]);
                        data->images.erase(data->images.begin() + i);
                        data->images.push_back(std::move(draggedItem));
                        data->draggingImageIndex = data->images.size() - 1;
                    }

                    InvalidateRect(hwnd, NULL, TRUE);
                    break;
                }
            }
        }
        return 0;
    }

    case WM_MOUSEMOVE: {
        if (data && data->isDragging && data->draggingImageIndex < data->images.size()) {
            // Get current mouse position
            int mouseX = GET_X_LPARAM(lParam);
            int mouseY = GET_Y_LPARAM(lParam);
            POINT currentPt = { mouseX, mouseY };

            // Calculate movement delta
            int deltaX = currentPt.x - data->lastMousePos.x;
            int deltaY = currentPt.y - data->lastMousePos.y;

            if (deltaX != 0 || deltaY != 0) {
                // Update image position
                data->images[data->draggingImageIndex].x += static_cast<float>(deltaX);
                data->images[data->draggingImageIndex].y += static_cast<float>(deltaY);

                // Get window dimensions
                RECT windowRect;
                GetClientRect(hwnd, &windowRect);

                // Ensure the image stays within window bounds
                if (data->images[data->draggingImageIndex].x < 0)
                    data->images[data->draggingImageIndex].x = 0;
                if (data->images[data->draggingImageIndex].y < 0)
                    data->images[data->draggingImageIndex].y = 0;
                if (data->images[data->draggingImageIndex].x + data->images[data->draggingImageIndex].width > windowRect.right)
                    data->images[data->draggingImageIndex].x = windowRect.right - data->images[data->draggingImageIndex].width;
                if (data->images[data->draggingImageIndex].y + data->images[data->draggingImageIndex].height > windowRect.bottom - 40) // 40 for panel
                    data->images[data->draggingImageIndex].y = windowRect.bottom - 40 - data->images[data->draggingImageIndex].height;

                // Update last mouse position
                data->lastMousePos = currentPt;

                // Redraw window
                InvalidateRect(hwnd, NULL, TRUE);
            }
        }
        return 0;
    }

    case WM_LBUTTONUP: {
        if (data && data->isDragging) {
            // Stop dragging
            data->isDragging = false;
            data->draggingImageIndex = SIZE_MAX;

            // Release mouse capture
            ReleaseCapture();
        }
        return 0;
    }

    default:
        return DefWindowProc(hwnd, uMsg, wParam, lParam);
    }
}

// Main Application Function
int WINAPI WinMain(HINSTANCE hInstance, HINSTANCE, LPSTR, int nCmdShow) {
    const wchar_t CLASS_NAME[] = L"FullscreenWindowClass";

    // Initialize GDI+
    GdiplusStartupInput gdiplusStartupInput;
    ULONG_PTR gdiplusToken;
    if (GdiplusStartup(&gdiplusToken, &gdiplusStartupInput, NULL) != Ok) {
        MessageBox(NULL, L"Не удалось инициализировать GDI+", L"Ошибка", MB_ICONERROR);
        return 0;
    }

    // Define window class
    WNDCLASS wc = {};
    wc.lpfnWndProc = WindowProc;
    wc.hInstance = hInstance;
    wc.lpszClassName = CLASS_NAME;
    wc.hCursor = LoadCursor(NULL, IDC_ARROW);
    wc.hbrBackground = (HBRUSH)(COLOR_WINDOW + 1);

    if (!RegisterClass(&wc)) {
        MessageBox(NULL, L"Не удалось зарегистрировать класс окна.", L"Ошибка", MB_ICONERROR);
        GdiplusShutdown(gdiplusToken);
        return 0;
    }

    // Get screen dimensions
    int screenWidth = GetSystemMetrics(SM_CXSCREEN);
    int screenHeight = GetSystemMetrics(SM_CYSCREEN);

    // Create window
    HWND hwnd = CreateWindowEx(
        WS_EX_TOPMOST, // Window always on top
        CLASS_NAME,
        L"Orega OS Presentation",
        WS_POPUP, // Remove window borders
        0, 0, screenWidth, screenHeight, // Window position and size
        NULL,
        NULL,
        hInstance,
        NULL
    );

    if (hwnd == NULL) {
        MessageBox(NULL, L"Не удалось создать окно.", L"Ошибка", MB_ICONERROR);
        GdiplusShutdown(gdiplusToken);
        return 0;
    }

    ShowWindow(hwnd, nCmdShow);
    UpdateWindow(hwnd);

    // Message loop
    MSG msg;
    while (GetMessage(&msg, NULL, 0, 0)) {
        TranslateMessage(&msg);
        DispatchMessage(&msg);
    }

    // Shutdown GDI+
    GdiplusShutdown(gdiplusToken);
    return 0;
}
