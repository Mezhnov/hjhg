# client.py
import sys
from PyQt5.QtCore import QUrl
from PyQt5.QtWidgets import QApplication, QMainWindow, QVBoxLayout, QWidget
from PyQt5.QtWebEngineWidgets import QWebEngineView

class BrowserWindow(QMainWindow):
    def __init__(self, server_ip, server_port=5000):
        super().__init__()

        self.setWindowTitle('HTML Viewer')
        self.setGeometry(100, 100, 1024, 768)

        # Настройка виджета для отображения HTML
        self.browser = QWebEngineView()

        # Формирование URL для подключения к серверу
        url = f"http://{server_ip}:{server_port}/"
        self.browser.setUrl(QUrl(url))

        # Создаём layout для окна
        layout = QVBoxLayout()
        layout.addWidget(self.browser)

        container = QWidget()
        container.setLayout(layout)

        self.setCentralWidget(container)

if __name__ == '__main__':
    if len(sys.argv) < 2:
        print("Использование: python client.py <IP_СЕРВЕРА> [порт]")
        sys.exit(1)

    server_ip = sys.argv[1]
    server_port = 5000  # Значение по умолчанию

    if len(sys.argv) >= 3:
        try:
            server_port = int(sys.argv[2])
        except ValueError:
            print("Порт должен быть числом.")
            sys.exit(1)

    # Запуск PyQt5
    app = QApplication(sys.argv)
    window = BrowserWindow(server_ip, server_port)
    window.show()

    sys.exit(app.exec_())
