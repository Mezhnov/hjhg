#include <windows.h>
#include <gdiplus.h>
#include <wininet.h>
#include <string>
#include <vector>
#include <chrono>
#include <iomanip>
#include <sstream>
#include <locale>
#include <codecvt>

#pragma comment(lib, "gdiplus.lib")
#pragma comment(lib, "wininet.lib")

using namespace Gdiplus;

// Global variables
Image* backgroundImage = nullptr;
HWND hSearchBox = nullptr;

// Function to load image from URL
bool LoadImageFromURL(const std::wstring& url) {
    HINTERNET hInternet = InternetOpen(L"ImageLoader", INTERNET_OPEN_TYPE_DIRECT, NULL, NULL, 0);
    if (!hInternet) {
        MessageBox(NULL, L"Не удалось инициализировать интернет-сессию.", L"Ошибка", MB_OK | MB_ICONERROR);
        return false;
    }

    // Use INTERNET_FLAG_SECURE for HTTPS
    HINTERNET hConnect = InternetOpenUrl(hInternet, url.c_str(), NULL, 0,
        INTERNET_FLAG_RELOAD | INTERNET_FLAG_SECURE | INTERNET_FLAG_NO_CACHE_WRITE, 0);
    if (!hConnect) {
        MessageBox(NULL, L"Не удалось подключиться к URL.", L"Ошибка", MB_OK | MB_ICONERROR);
        InternetCloseHandle(hInternet);
        return false;
    }

    std::vector<BYTE> buffer;
    DWORD bytesAvailable = 0;
    DWORD bytesRead = 0;
    BYTE tempBuffer[4096];

    // Read data in a loop until all data is read
    while (InternetQueryDataAvailable(hConnect, &bytesAvailable, 0, 0) && bytesAvailable > 0) {
        DWORD toRead = bytesAvailable;
        if (toRead > sizeof(tempBuffer))
            toRead = sizeof(tempBuffer);

        if (InternetReadFile(hConnect, tempBuffer, toRead, &bytesRead) && bytesRead > 0) {
            buffer.insert(buffer.end(), tempBuffer, tempBuffer + bytesRead);
        }
        else {
            break;
        }
    }

    InternetCloseHandle(hConnect);
    InternetCloseHandle(hInternet);

    if (buffer.empty()) {
        MessageBox(NULL, L"Изображение не было загружено или файл пуст.", L"Ошибка", MB_OK | MB_ICONERROR);
        return false;
    }

    // Create IStream from buffer
    IStream* stream = nullptr;
    if (FAILED(CreateStreamOnHGlobal(NULL, TRUE, &stream))) {
        MessageBox(NULL, L"Не удалось создать поток данных.", L"Ошибка", MB_OK | MB_ICONERROR);
        return false;
    }

    ULONG written;
    if (FAILED(stream->Write(buffer.data(), static_cast<ULONG>(buffer.size()), &written)) || written != buffer.size()) {
        stream->Release();
        MessageBox(NULL, L"Не удалось записать данные в поток.", L"Ошибка", MB_OK | MB_ICONERROR);
        return false;
    }

    LARGE_INTEGER zero = { 0 };
    stream->Seek(zero, STREAM_SEEK_SET, NULL);

    // Create GDI+ Image
    backgroundImage = new Image(stream);
    stream->Release();

    if (backgroundImage->GetLastStatus() != Ok) {
        delete backgroundImage;
        backgroundImage = nullptr;
        MessageBox(NULL, L"Не удалось загрузить изображение из потока.", L"Ошибка", MB_OK | MB_ICONERROR);
        return false;
    }

    return true;
}

// Function to get current time as string
std::wstring GetCurrentTimeString() {
    using namespace std::chrono;
    auto now = system_clock::now();
    std::time_t now_c = system_clock::to_time_t(now);
    std::tm parts;

    // Use localtime_s instead of localtime
    localtime_s(&parts, &now_c);

    std::wstringstream ss;
    ss << std::put_time(&parts, L"%H:%M"); // Time format HH:MM
    return ss.str();
}

// Function to handle search action (placeholder)
void PerformSearch(const std::wstring& query) {
    // Placeholder: Display search query
    std::wstring message = L"Поиск: " + query;
    MessageBox(NULL, message.c_str(), L"Поиск", MB_OK | MB_ICONINFORMATION);
}

// Window Procedure
LRESULT CALLBACK WindowProc(HWND hwnd, UINT uMsg, WPARAM wParam, LPARAM lParam) {
    switch (uMsg) {
    case WM_CREATE:
        // Create Search Box on the left side of the bottom panel
        hSearchBox = CreateWindowEx(
            WS_EX_CLIENTEDGE, L"EDIT", NULL,
            WS_CHILD | WS_VISIBLE | ES_LEFT | WS_BORDER | ES_AUTOHSCROLL,
            10,  // X position
            10,  // Y position within the panel (to be adjusted in WM_SIZE)
            300, // Width (larger for better visibility)
            30,  // Height (larger for better visibility)
            hwnd,
            (HMENU)1, // ID
            NULL,
            NULL
        );
        if (!hSearchBox) {
            MessageBox(NULL, L"Не удалось создать окно поиска.", L"Ошибка", MB_OK | MB_ICONERROR);
        }
        // Set a custom font for the search box (Segoe UI, 16pt)
        HFONT hFont = CreateFont(16, 0, 0, 0, FW_NORMAL, FALSE, FALSE, FALSE, DEFAULT_CHARSET, OUT_OUTLINE_PRECIS,
            CLIP_DEFAULT_PRECIS, CLEARTYPE_QUALITY, VARIABLE_PITCH, TEXT("Segoe UI"));
        SendMessage(hSearchBox, WM_SETFONT, (WPARAM)hFont, TRUE);
        break;

    case WM_SIZE: {
        // Adjust the position of the search box within the panel
        int width = LOWORD(lParam);
        int height = HIWORD(lParam);

        // Define panel height
        const int panelHeight = 60; // Increased height for a more pronounced bottom panel

        // Move the search box to the left side of the panel
        if (hSearchBox) {
            MoveWindow(hSearchBox, 10, height - panelHeight + (panelHeight - 30) / 2, 300, 30, TRUE);
        }
        break;
    }

    case WM_DESTROY:
        delete backgroundImage; // Delete the image
        PostQuitMessage(0);
        return 0;

    case WM_KEYDOWN:
        // Check if Esc key is pressed
        if (wParam == VK_ESCAPE) {
            DestroyWindow(hwnd); // Close window
        }
        return 0;

    case WM_COMMAND:
        if (LOWORD(wParam) == 1 && HIWORD(wParam) == EN_UPDATE) {
            // Handle text update if needed
        }
        else if (LOWORD(wParam) == 1 && HIWORD(wParam) == EN_MAXTEXT) {
            // Handle max text reached if needed
        }
        else if (LOWORD(wParam) == 1 && HIWORD(wParam) == EN_CHANGE) {
            // Handle text change if needed
        }
        else if (LOWORD(wParam) == 1 && HIWORD(wParam) == EN_SETFOCUS) {
            // Handle focus on the search box if needed
        }
        break;

    case WM_NOTIFY:
        // Handle notifications if needed
        break;

    case WM_PAINT: {
        PAINTSTRUCT ps;
        HDC hdc = BeginPaint(hwnd, &ps);
        Graphics graphics(hdc);

        // Draw background image
        if (backgroundImage) {
            graphics.DrawImage(backgroundImage, 0, 0, ps.rcPaint.right, ps.rcPaint.bottom);
        }

        // Draw bottom panel
        RECT panelRect = { 0, ps.rcPaint.bottom - 60, ps.rcPaint.right, ps.rcPaint.bottom };
        FillRect(hdc, &panelRect, (HBRUSH)(COLOR_BTNFACE + 1)); // Panel color

        // Get current time
        std::wstring timeString = GetCurrentTimeString();
        std::wstring langString = L"РУС"; // Static language value

        // Use GDI+ to draw text
        FontFamily fontFamily(L"Segoe UI"); // Font selection
        Font font(&fontFamily, 16, FontStyleRegular, UnitPixel); // Font size 16
        SolidBrush brush(Color(255, 0, 0, 0)); // Black text color

        // Measure text size for centering
        RectF timeRect;
        graphics.MeasureString(timeString.c_str(), -1, &font, PointF(0, 0), &timeRect);
        RectF langRect;
        graphics.MeasureString(langString.c_str(), -1, &font, PointF(0, 0), &langRect);

        // Calculate coordinates for text position
        float xTime = panelRect.right - timeRect.Width - langRect.Width - 30; // Increased margin from right
        float y = panelRect.bottom - timeRect.Height - 10; // Margin from bottom

        // Draw time and language strings
        graphics.DrawString(timeString.c_str(), -1, &font, PointF(xTime, y), &brush);
        graphics.DrawString(langString.c_str(), -1, &font, PointF(xTime + timeRect.Width + 10, y), &brush);

        EndPaint(hwnd, &ps);
        break;
    }

    default:
        return DefWindowProc(hwnd, uMsg, wParam, lParam);
    }
    return 0;
}

// Main entry point
int WINAPI wWinMain(HINSTANCE hInstance, HINSTANCE, PWSTR pCmdLine, int nCmdShow) {
    // Initialize GDI+
    GdiplusStartupInput gdiplusStartupInput;
    ULONG_PTR gdiplusToken;
    if (GdiplusStartup(&gdiplusToken, &gdiplusStartupInput, NULL) != Ok) {
        MessageBox(NULL, L"Не удалось инициализировать GDI+.", L"Ошибка", MB_OK | MB_ICONERROR);
        return -1;
    }

    // Load background image from URL
    if (!LoadImageFromURL(L"https://example.com/image.jpg")) {
        GdiplusShutdown(gdiplusToken);
        return -1;
    }

    WNDCLASS wc = {};
    wc.lpfnWndProc = WindowProc;
    wc.hInstance = hInstance;
    wc.lpszClassName = L"FullscreenApp";
    wc.hCursor = LoadCursor(NULL, IDC_ARROW);

    RegisterClass(&wc);

    HWND hwnd = CreateWindowEx(
        WS_EX_TOPMOST,
        wc.lpszClassName,
        L"Полноэкранное приложение",
        WS_POPUP,
        0, 0, GetSystemMetrics(SM_CXSCREEN), GetSystemMetrics(SM_CYSCREEN),
        NULL, NULL, hInstance, NULL
    );

    if (!hwnd) {
        MessageBox(NULL, L"Не удалось создать окно.", L"Ошибка", MB_OK | MB_ICONERROR);
        GdiplusShutdown(gdiplusToken);
        return -1;
    }

    ShowWindow(hwnd, nCmdShow);

    // Main message loop
    MSG msg = {};
    while (GetMessage(&msg, NULL, 0, 0)) {
        TranslateMessage(&msg);
        DispatchMessage(&msg);
    }

    // Cleanup GDI+
    GdiplusShutdown(gdiplusToken);

    return 0;
}
