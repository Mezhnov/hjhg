#include <iostream>
#include <chrono>
#include <thread>

// Константы
const float GRAVITY = 9.81f;    // Ускорение свободного падения (м/с^2)
const float TIME_STEP = 0.1f;   // Шаг времени (с)
const int SIMULATION_TIME = 5;  // Общее время симуляции (с)

int main() {
    float position = 100.0f;    // Начальная позиция (высота) в метрах
    float velocity = 0.0f;      // Начальная скорость (м/с)
    float time = 0.0f;          // Текущее время

    while (time <= SIMULATION_TIME && position >= 0) {
        // Вывод текущего состояния
        std::cout << "Время: " << time << " с\t";
        std::cout << "Высота: " << position << " м\t";
        std::cout << "Скорость: " << velocity << " м/с" << std::endl;

        // Обновление скорости и позиции
        velocity += GRAVITY * TIME_STEP;      // v = v0 + a * t
        position -= velocity * TIME_STEP;     // s = s0 + v * t

        // Ожидание для имитации реального времени
        std::this_thread::sleep_for(std::chrono::milliseconds(int(TIME_STEP * 1000)));

        // Обновление времени
        time += TIME_STEP;
    }

    // Сообщение о приземлении
    if (position <= 0) {
        std::cout << "Объект достиг земли в момент времени " << time << " с." << std::endl;
    }

    return 0;
}
